#!/bin/bash

# Variables:
compiler=g++
ouput=main.o

# Clean up the current repo:
rm -f ./$ouput

# Functions:
usage () {
    echo "compile"
    echo "  [-c <compiler>] Specify a different compiler than g++."
}

# Compile:
$compiler -std=c++11 -g main.cpp functions/functions.cpp functions/bigint.cpp -o $ouput

# Running:
./$ouput